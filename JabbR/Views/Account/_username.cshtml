@using JabbR;
@model LoginViewModel

<form class="m-t" role="form" action="@Url.Content("~/account/login" + Html.RequestQuery())" method="post">
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.TextBox("username", "form-control", @LanguageResources.Account_UserName)
    </div>
    <div class="form-group">
        @Html.Password("password", "form-control", @LanguageResources.Account_Pass)
    </div>
    <button type="submit" class="btn btn-primary block full-width m-b">@LanguageResources.Account_SignIn</button>
    @if (Model.AllowUserRegistration)
    {
        <a class="btn btn-sm btn-white btn-block" href="@Url.Content("~/account/register" + Html.RequestQuery())">@LanguageResources.Account_SignUp</a>
    }
    @if (Model.AllowUserResetPassword && Model.HasEmailSender)
    {
        <a href="@Url.Content(" ~ />account/requestresetpassword" + Html.RequestQuery())"><small>@LanguageResources.Account_ForgetPassword</small></a>
    }
</form>
