@using JabbR
@model SettingsViewModel
@{
    Layout = null;
    var currentModel = Model;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--<link rel="icon" href="/Content/Theme2/landing/img/favicon.ico">-->

    <title>@LanguageResources.SiteName</title>

    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.6/animate.min.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->
    <link href="~/Content/Theme2/landing/css/style.css" rel="stylesheet" />

    @Html.Partial("_tracking", @currentModel)

</head>
<body id="page-top">
    <div class="navbar-wrapper">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/" style="font-size:1.5em;">@LanguageResources.SiteName</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="page-scroll" href="#page-top">Home</a></li>
                        <li><a class="page-scroll" href="#communicate">Communicate</a></li>
                        <li><a class="page-scroll" href="#collaborate">Collaborate</a></li>
                        <li><a class="page-scroll" href="#connect">Connect</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div id="inSlider" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#inSlider" data-slide-to="0" class="active"></li>
            <li data-target="#inSlider" data-slide-to="1"></li>
            <li data-target="#inSlider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="container">
                    <div class="carousel-caption blank">
                        <h1>
                            Communicate<br />
                        </h1>
                        <p>Anywhere, anytime</p>
                        <p>
                            @*<a class="btn btn-lg btn-primary" href="#" role="button">READ MORE</a>*@
                        </p>
                    </div>
                    <div class="carousel-image wow">
                        <img src="~/Content/Theme2/landing/img/chat.png" alt="laptop" />
                    </div>
                </div>
                <!-- Set background for slide in css -->
                <div class="header-back one"></div>

            </div>
            <div class="item">
                <div class="container">
                    <div class="carousel-caption blank">
                        <h1>
                            Collaborate
                        </h1>
                        <p>Your document is alive</p>
                        <p>@*<a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a>*@</p>
                    </div>
                    <div class="carousel-image wow">
                        <img src="~/Content/Theme2/landing/img/doc_edit.png" alt="laptop" />
                    </div>
                </div>
                <!-- Set background for slide in css -->
                <div class="header-back two"></div>
            </div>
            <div class="item">
                <div class="container">
                    <div class="carousel-caption blank">
                        <h1>
                            Connect
                        </h1>
                        <p>Stay one top of everything</p>
                        <p>@*<a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a>*@</p>
                    </div>
                    <div class="carousel-image wow">
                        <img src="~/Content/Theme2/landing/img/hub.png" alt="laptop" />
                    </div>
                </div>
                <!-- Set background for slide in css -->
                <div class="header-back three"></div>
            </div>
        </div>
        <a class="left carousel-control" href="#inSlider" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#inSlider" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <section class="container features">
        <div class="row" id="communicate">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>Stay tuned with your team</h1>
                <p>Anwhere, anytime</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 text-center wow fadeInLeft" style="margin-top:50px;">
                <div>
                    <i class="fa fa-laptop features-icon"></i>
                    <h2>In the office</h2>
                    <p>Stay on top of your game</p>
                </div>
                <div class="m-t-lg">
                    <i class="fa fa-mobile features-icon"></i>
                    <h2>On the go</h2>
                    <p>Keep in touch with everyone</p>
                </div>
            </div>
            <div class="col-md-6 text-center  wow zoomIn">
                <img src="~/Content/Theme2/landing/img/chat_wi.png" alt="dashboard" class="img-responsive">
            </div>
            <div class="col-md-3 text-center wow fadeInRight" style="margin-top:50px;">
                <div>
                    <i class="fa fa-comments-o features-icon"></i>
                    <h2>Instant</h2>
                    <p>Need need to keep checking your email</p>
                </div>
                <div class="m-t-lg">
                    <i class="fa fa-bolt features-icon"></i>
                    <h2>No cluter</h2>
                    <p>Just the message, no dates, no signatures</p>
                </div>
            </div>
        </div>
        <div class="row" id="collaborate">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>Real time fun with documents</h1>
                <p>Your documents evolve with the team</p>
            </div>
        </div>
        <div class="row features-block">
            <div class="col-lg-6 features-text wow fadeInLeft">
                <p>
                    No more "FreatureDocument_draft.docx", "FreatureDocument_V1.docx",  "FreatureDocument_final.docx"... Only one document, for everyone. See who wrote what, when. Make comments and playback the history.
                </p>
            </div>
            <div class="col-lg-6 text-right wow fadeInRight">
                <img src="~/Content/Theme2/landing/img/doc_edit_wi.png" alt="dashboard" class="img-responsive pull-right">
            </div>
        </div>

        <div class="container" id="connect">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="navy-line"></div>
                    <h1>Stay on top of everything</h1>
                    <p>We mean everything!</p>
                </div>
            </div>
            <div class="row features-block">
                <div class="col-lg-3 features-text wow fadeInLeft">
                    <p>Trello, Github, Dropbox, we love them all! They do what they best, why gave them up? Now you don't have to.</p>
                </div>
                <div class="col-lg-6 text-right m-t-n-lg wow zoomIn">
                    <img src="/Content/Theme2/landing/img/hub_i.png" class="img-responsive" alt="dashboard">
                </div>
                <div class="col-lg-3 features-text text-right wow fadeInRight">
                    <p>Collara helps you stay connected with all of them. You will be notified with everything, in one place.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="testimonials" class="navy-section testimonials">

        <div class="container">

        </div>

    </section>

    <section id="contact" class="gray-section contact" style="margin-top:0">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center m-t-lg m-b-lg">
                    <p><strong>Made with <i class="fa fa-heart" style="color:#f65f4d"></i> by Collara</strong></p>
                </div>
            </div>
        </div>
    </section>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/Content/Theme2/landing/js/pace.min.js"></script>
    <script src="~/Content/Theme2/landing/js/classie.js"></script>
    <script src="~/Content/Theme2/landing/js/cbpAnimatedHeader.js"></script>
    <script src="~/Content/Theme2/landing/js/wow.min.js"></script>
    <script src="~/Content/Theme2/landing/js/inspinia.js"></script>
</body>
</html>
